<Window x:Class="database.Accountant"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:database.ViewModel"
        mc:Ignorable="d"
        Title="Accountant" Height="320" Width="400">
    <Window.DataContext>
        <vm:ViewAccountant/>
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="61*"/>
            <ColumnDefinition Width="81*"/>
            <ColumnDefinition Width="54*"/>
        </Grid.ColumnDefinitions>
        <Button Content="Hire Worker" Command="{Binding AddWorkerCommand}" Margin="15,50,30,0" VerticalAlignment="Top" Height="33" Grid.Column="1"/>
        <Button Content="New Gun" Command="{Binding AddAmmoCommand}" Margin="15,125,30,0" VerticalAlignment="Top" Height="33" RenderTransformOrigin="2.117,2.697" Grid.Column="1"/>
        <Button Content="New Ammo" Command="{Binding AddWeaponCommand}" Margin="15,200,30,0" VerticalAlignment="Top" Height="33" Grid.Column="1"/>


    </Grid>
</Window>
