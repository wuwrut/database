<Window x:Class="database.Accountant"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:database.ViewModel"
        mc:Ignorable="d"
        Title="Accountant" Height="320" Width="400">
    <Window.DataContext>
        <vm:ViewAccountant/>
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="165*"/>
            <ColumnDefinition Width="227*"/>
        </Grid.ColumnDefinitions>
        <Button Content="Hire Worker" Command="{Binding AddWorkerCommand}"  HorizontalAlignment="Left" Margin="38,50,0,0" VerticalAlignment="Top" Width="91" Height="33"/>
        <Button Content="New Production" Command="{Binding AddProductionCommand}" HorizontalAlignment="Left" Margin="38,125,0,0" VerticalAlignment="Top" Width="91" Height="33"/>
        <Button Content="Order Material" Command="{Binding AddMaterialCommand}" HorizontalAlignment="Left" Margin="38,200,0,0" VerticalAlignment="Top" Width="91" Height="33"/>

    </Grid>
</Window>
