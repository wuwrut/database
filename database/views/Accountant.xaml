<Window x:Class="database.Accountant"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:database.ViewModel"
        mc:Ignorable="d"
        Title="Accountant" Height="320" Width="400">
    <Window.DataContext>
        <vm:ViewAccountant/>
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="39*"/>
            <ColumnDefinition Width="59*"/>
        </Grid.ColumnDefinitions>
        <Button Content="Hire Worker" Command="{Binding AddWorkerCommand}" Margin="32,50,30,0" VerticalAlignment="Top" Height="33"/>
        <Button Content="New Production" Command="{Binding AddProductionCommand}" Margin="32,125,30,0" VerticalAlignment="Top" Height="33" RenderTransformOrigin="2.117,2.697"/>
        <Button Content="Order Material" Command="{Binding AddMaterialCommand}" Margin="32,200,30,0" VerticalAlignment="Top" Height="33"/>

        <TextBox Grid.Column="1" IsReadOnly="True" Text="{Binding TextOutcome}" Margin="92,50,21,206" TextWrapping="Wrap" TextAlignment="Center"/>
        <Label Content="Outcome:" Grid.Column="1" HorizontalAlignment="Left" Margin="26,50,0,0" VerticalAlignment="Top" Height="33" Width="61"/>


    </Grid>
</Window>
